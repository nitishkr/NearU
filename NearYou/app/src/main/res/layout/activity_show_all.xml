<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.iiitd.team10.nearyou.ShowAll"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/rel">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Nearest Places"
        android:textSize="23sp"
        android:textColor="#ffffff"
        android:background="#CB212E"
        android:fontFamily="@string/mr_media_route_chooser_title"
        android:id="@+id/preference"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:gravity="left"
        android:padding="5dp"


        />
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/signout"
        android:layout_centerVertical="true"
        android:background="@drawable/signout"
        android:textSize="15sp"

        android:layout_alignRight="@+id/preference"
        android:layout_alignEnd="@+id/preference"
        android:layout_marginRight="5dp" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/prefbutton"
        android:background="@drawable/change"

        android:textSize="15sp"

        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/signout"
        android:layout_toStartOf="@+id/signout"
        android:layout_marginRight="8dp" />
</RelativeLayout>

    <ListView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/listView2"
        android:layout_below="@+id/rel"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
